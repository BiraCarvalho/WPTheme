
var pageScroll = function( element, event ){

    var hash = element.hash;
    var home = 71;

    if( !jQuery( "[rel='scroll-page']" ).length ){
        return false;
    }
        
    event.preventDefault();
    
    jQuery('html, body').animate({
      scrollTop: jQuery(hash).offset().top - home
    }, 800, function(){

      // Add hash (#) to URL when done scrolling (default click behavior)

      	if ( history.pushState ) {
            history.pushState(null, null, hash);
        }
        else {
            location.hash = hash;
        }

    })
}; 

jQuery(function(){
    pageScroll( location, event );
    
});

jQuery("#menu-principal .navigation li a").on('click', function(event) {
  
  if ( this.hash ) {
    pageScroll( this, event );
  }

});
